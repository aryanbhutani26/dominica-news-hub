{
  "name": "dominica-news-backend",
  "version": "1.0.0",
  "description": "Backend API for Dominica News CMS",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:prod": "npm ci --only=production && npm run build",
    "start:prod": "NODE_ENV=production npm start",
    "docker:build": "docker build -t dominica-news-api .",
    "docker:run": "docker run -p 5000:5000 --env-file .env dominica-news-api",
    "seed": "ts-node src/scripts/seedDatabase.ts",
    "seed:prod": "node dist/scripts/seedDatabase.js",
    "create-indexes": "ts-node src/scripts/createIndexes.ts",
    "create-indexes:prod": "node dist/scripts/createIndexes.js"
  },
  "keywords": [
    "news",
    "cms",
    "api",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
